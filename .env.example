# TailSentry Configuration
# Copy to .env and fill in values

# === Authentication ===
ADMIN_USERNAME=admin
# Use bcrypt hash for password (see README for generation command)
ADMIN_PASSWORD_HASH=

# === Session Configuration ===
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=
SESSION_TIMEOUT_MINUTES=30

# === Tailscale Configuration ===
# Personal Access Token for Tailscale API (optional but recommended)
TAILSCALE_PAT=
# Tailnet name (default: "-" for personal tailnet)
TAILSCALE_TAILNET=-
# API timeout in seconds
TAILSCALE_API_TIMEOUT=10

# === Application Settings ===
# Set to "true" for development mode (enables docs, detailed errors)
DEVELOPMENT=false
# Allowed CORS origin (use "*" for development only)
ALLOWED_ORIGIN=https://your-domain.com
# Data directory for storing configurations and metrics
TAILSENTRY_DATA_DIR=/app/data

# === Logging ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# === Monitoring & Alerts ===
# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300
# Email for alerts (requires mail command)
ALERT_EMAIL=admin@example.com
# Webhook URL for alerts (Slack, Discord, etc.)
WEBHOOK_URL=

# === Backup Configuration ===
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
# S3 bucket for remote backups (optional)
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# === Database (Future Enhancement) ===
# DATABASE_URL=sqlite:///./tailsentry.db

# === Performance ===
# Number of worker processes (default: 1)
WORKERS=1
# Enable Prometheus metrics
METRICS_ENABLED=false
METRICS_PORT=9091
